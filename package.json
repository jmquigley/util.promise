{
  "name": "util.promise",
  "version": "0.0.5",
  "author": "jmquigley <jmquigley@outlook.com>",
  "description": "Utility functions for handling promises",
  "private": false,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jmquigley/util.promise"
  },
  "bugs": {
    "url": "https://github.com/jmquigley/util.promise/issues"
  },
  "engines": {
    "node": ">=7.4"
  },
  "devDependencies": {
    "ava": "^0.19.1",
    "coveralls": "^2.13.0",
    "fs-extra": "^2.1.2",
    "nyc": "^10.2.0",
    "util.fixture": "0.0.47",
    "util.pkgwrap": "0.0.21",
    "xo": "^0.18.1"
  },
  "main": "index.js",
  "scripts": {
    "all": "npm install && npm run lint && npm test && npm run report",
    "coverage": "./node_modules/.bin/pkgwrap --coverage",
    "lint": "./node_modules/.bin/xo",
    "postinstall": "./node_modules/.bin/pkgwrap --postinstall",
    "report": "./node_modules/.bin/pkgwrap --reporting",
    "test": "./node_modules/.bin/pkgwrap --testing --ava"
  },
  "xo": {
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "global": [
      "window",
      "JSON"
    ],
    "rules": {
      "space-before-function-paren": "off",
      "unicorn/filename-case": [
        "error",
        {
          "case": "snakeCase"
        }
      ],
      "arrow-parens": [
        "error",
        "as-needed"
      ],
      "prefer-promise-reject-errors": "off",
      "capitalized-comments": "off"
    }
  }
}
